#!/bin/bash

MULTIO_SINKS=${MULTIO_SINKS:=fdb4}

set -e

for sink in $(echo MULTIO_SINKS | tr ':' ' ')
do

    if [[ "$sink" == "fdb5" ]]
    then
        CMD="grib2fdb5"
    else
        if [[ -x /usr/local/apps/mars/current/GNU/48/bin/grib2fdb ]]
        then
            CMD=/usr/local/apps/mars/current/GNU/48/bin/grib2fdb
        else
            CMD=/usr/local/lib/metaps/mars_grib_api/bin/grib2fdb
        fi
    fi

    $CMD "$@"
done
